#!/bin/bash

default=no
prompt=(yes/No)
if test "$1" = -y; then
    default=yes;
    prompt=(Yes/no)
    shift
fi

user_prompt=$(echo -n "$@")
if test "${user_prompt:0-1}" != '?'; then
    user_prompt=${user_prompt}\?
fi

if ! tty >/dev/null 2>&1 || test "$EMACS"; then
    REPLY=$(
        ask-for-input-with-sawfish -p "$user_prompt $prompt:"
    )
else
    (echo -n >/dev/tty) >/dev/null 2>&1 &&
    read -p "$user_prompt $prompt: " >/dev/tty 2>&1
fi

if test -z "$REPLY" -a $default = yes; then
    exit 0
fi

if echo $REPLY|grep '^yes$' -iq; then
    exit 0
fi
exit -1
